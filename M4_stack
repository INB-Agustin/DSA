#include <iostream>
#include <stack>
#include <string>
#include <list>

using namespace std;

struct Node{
    string braces;
};


int main(){

    stack <Node , list<Node>> curlyBraces;
    int openCurly = 0;
    int closeCurly = 0;
    int stringLength = 0;
    string inputString;

    Node node;

    do{
        cout << "Enter a string of curly braces: ";
        getline(cin, inputString);

        stringLength = inputString.length();
        
        for(int i = 0; i < stringLength ; i++){
            if(inputString[i] == '{'){
                openCurly++;
                node.braces = "{";
                curlyBraces.push(node);
            }
            else if(inputString[i] == '}'){
                closeCurly++;
                node.braces = "}";
                curlyBraces.push(node);
            }
            else {
                cout << "Invalid character found: " << inputString[i] << endl;
                return 0;
            }
            
        }


        if (openCurly - closeCurly >= 0) {
            cout << "Minimum number of replacement required : " << openCurly - closeCurly << endl;
        }else{
            cout << "Minimum number of replacement required : " << (openCurly - closeCurly)*-1 << endl;
        }

        openCurly = 0;
        closeCurly = 0;

    }while(true);



    return 0;
}
